[Unit]
Description=Telegram Digital Products Bot
After=network.target

[Service]
Type=simple
User=YOUR_USER
WorkingDirectory=/path/to/bot2
Environment="PATH=/path/to/bot2/venv/bin"
ExecStart=/path/to/bot2/venv/bin/python main.py
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/var/log/telegram-bot/bot.log
StandardError=append:/var/log/telegram-bot/bot-error.log

[Install]
WantedBy=multi-user.target


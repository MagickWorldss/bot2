[Unit]
Description=Telegram Bot Transaction Monitor
After=network.target

[Service]
Type=simple
User=YOUR_USER
WorkingDirectory=/path/to/bot2
Environment="PATH=/path/to/bot2/venv/bin"
ExecStart=/path/to/bot2/venv/bin/python monitor_transactions.py
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/var/log/telegram-bot/monitor.log
StandardError=append:/var/log/telegram-bot/monitor-error.log

[Install]
WantedBy=multi-user.target

